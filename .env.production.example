# Example production env file. Copy to `.env.production` on the server and fill values.
# Database (Postgres)
POSTGRES_USER=grievance
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=grievance
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# App secrets
SECRET_KEY=replace_with_a_long_random_value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Redis for Celery
REDIS_URL=redis://redis:6379/0

# SMTP (email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=admin@example.com

# Optional: run migrations automatically when container starts
# set to 'yes' to run `alembic upgrade head` from the container
RUN_MIGRATIONS=no
